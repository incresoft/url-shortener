{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "outDir": "build",
        "pretty": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "paths": {
            "#models/*": ["./src/models/*"],
            "#utils/*": ["./src/utils/*"]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}